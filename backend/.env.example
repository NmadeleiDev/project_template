# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL host address (use 'db' for Docker, 'localhost' for local dev)
POSTGRES_HOST=db

# PostgreSQL port (default: 5432)
POSTGRES_PORT=5432

# PostgreSQL username
POSTGRES_USER=app

# PostgreSQL password - CHANGE IN PRODUCTION
POSTGRES_PASSWORD=passwd

# PostgreSQL database name
POSTGRES_APP_DB=postgres

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis host address (use 'redis' for Docker, 'localhost' for local dev)
REDIS_HOST=redis

# Redis port (default: 6379)
REDIS_PORT=6379

# Redis database number (0-15)
REDIS_DB=0

# Redis queue name for Taskiq - CHANGE THIS for your project
# Use format: {project_name}_{environment} (e.g., myapp_production)
REDIS_QUEUE_NAME=CHANGE_ME

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================

# JWT secret key - CRITICAL: Use a strong random string in production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=change-me-in-production

# JWT signing algorithm (HS256 recommended for symmetric keys)
JWT_ALGORITHM=HS256

# JWT access token expiration in minutes (default: 10080 = 7 days)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application name (displayed in API docs)
APP_NAME=Backend

# Application description (displayed in API docs)
APP_DESCRIPTION=Backend

# Enable HTTPS mode (set to true in production behind SSL termination)
HTTPS_ENABLED=false

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Enable Sentry error tracking (true/false)
SENTRY_ENABLED=false

# Sentry DSN (Data Source Name) - get from your Sentry project settings
# Example: https://examplePublicKey@o0.ingest.sentry.io/0
SENTRY_DSN=

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOGGING_LEVEL=INFO

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================

# For local development (without Docker):
# - Set POSTGRES_HOST=localhost
# - Set REDIS_HOST=localhost
# - Ensure PostgreSQL and Redis are running locally

# For Docker development:
# - Set POSTGRES_HOST=db
# - Set REDIS_HOST=redis
# - Service names from docker-compose.yaml are used for networking

# Security checklist for production:
# 1. Generate strong JWT_SECRET_KEY (min 32 characters)
# 2. Use strong POSTGRES_PASSWORD
# 3. Set HTTPS_ENABLED=true
# 4. Enable SENTRY_ENABLED and configure SENTRY_DSN
# 5. Set LOGGING_LEVEL=WARNING or ERROR
# 6. Change REDIS_QUEUE_NAME to project-specific name
